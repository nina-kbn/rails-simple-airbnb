<div class="container">
  <h1>Flats</h1>

  <ul>
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem;">
        <img src="..." class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.description %></p>
          <p class="card-text">Address: <%= flat.address %></p>
          <p class="card-text">Price Per Night: <%= flat.price_per_night %></p>
          <p class="card-text">Number of Guests: <%= flat.number_of_guests %></p>

          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
    <% end %>

  </ul>
</div>
